<p id="notice"></p>
<div class="container">

  <div class="row">
    <h5 class="bg-light text-dark"><strong>管理者</strong>ログイン</h5>
  </div>


  <%= form_with model: @admin, url: admin_session_path do |f| %>
    <div class="mb-3 row">
      <%= f.label :メールアドレス, class: "col-md-2 offset-md-1 col-form-label" %>
        <div class="col-md-6">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>
    </div>

    <div class="mb-3 row">
      <%= f.label :パスワード, class: "col-md-2 offset-md-1 col-form-label" %>
      <div class="col-md-6">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>
    </div>

    <div class="row">

      <div class="col-md-2 offset-md-3">
        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <% end %>

    <%= render "admin/shared/links" %>

</div>