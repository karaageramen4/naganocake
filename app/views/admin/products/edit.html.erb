<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="offset-md-1">
      <h5 class="bg-light text-dark">商品編集</h5>
    </div>
  </div>

  <%= form_with model: [:admin, @product] do |f| %>

    <div class="row mb-3">
      <%= f.label :image, "商品画像", class: "col-md-2 offset-md-2 col-form-label" %>
      <div class="col-md-5">
        <%= f.file_field :image, accept: "image/*" %>
      </div>
    </div>

    <div class="row mb-3">
      <%= f.label :name, "商品名", class: "col-md-2 offset-md-2 col-form-label" %>
      <div class="col-md-5">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <%= f.label :introduction, "商品説明", class: "col-md-2 offset-md-2 form-label" %>
      <div class="col-md-5">
        <%= f.text_area :introduction, class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <%= f.label :genre_id, "ジャンル", class: "col-md-2 offset-md-2 form-select-label" %>
      <div class="col-md-5">
        <%= f.collection_select :genre_id, @genres, :id, :name, { include_blank: '--選択してください--' }, class: "form-select" %>
      </div>
    </div>

    <div class="row mb-3">
      <%= f.label :price, "税抜き価格", class: "col-md-2 offset-md-2 col-form-label" %>
      <div class="col-md-5">
        <%= f.text_field :price, class: "form-control" %>円
      </div>
    </div>

    <div class="row mb-3">
      <%= f.label :is_active, "販売ステータス", class: "col-md-2 offset-md-2 form-check-label" %>
      <div class="col-md-6">
        <div class="row">
          <div class="col-md-3">
            <%= f.radio_button :is_active, true, class: "form-check-input" %>
            <%= f.label :is_active, "販売中", class: "form-check-label" %>
          </div>
          <div class="col-md-3">
            <%= f.radio_button :is_active, false, class: "form-check-input" %>
            <%= f.label :is_active, "販売停止中", class: "form-check-label" %>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12 text-center">
        <%= f.submit '変更を保存', class: "btn btn-success" %>
      </div>
    </div>

  <% end %>
