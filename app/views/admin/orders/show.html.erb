<p id="notice"></p>
<div class="container">

  <div class="row">

    <h5 class="bg-light text-dark">注文履歴詳細</h5>
  </div>

    <div class="row">
      <p class="col-md-2">購入者</p><p class="col-md-2"><%= @order.customer.last_name %><%= @order.customer.first_name %></p>
    </div>

    <div class="row">
      <p class="col-md-2">注文日</p><p class="col-md-2"><%= @order.created_at.strftime('%Y/%m/%d') %></p>
    </div>

    <div class="row">
      <p class="col-md-2">配送先</p>
      <p class="col-md-8">〒<%= @order.postal_code %><%= @order.address %><br><%= @order.name %></p>
    </div>

    <div class="row">
      <p class="col-md-2">支払い方法</p><p class="col-md-2"><%= @order.payment_method_i18n %></p>
    </div>

    <div class="row">

         <%= form_with model: @order, url: admin_order_path(@order), method: :patch do |f| %>
           <%= f.label :status, "注文ステータス" %>
           <%= f.select :status, ['入金待ち', '入金確認', '製作中', '発送準備中', '発送済み'] %>
           <%= f.submit "更新", class:" btn btn-success" %>
         <% end %>
    </div>

  <div class="row">
    <div class="col-md-9">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
            <th></th>
          </tr>
        </thead>

        <tbody>

      <% @order_products.each do |order_product| %>
        <tr>
          <td><%= order_product.product.name %></td>
          <td><%= order_product.price.to_s(:delimited) %></td>
          <td><%= order_product.amount %></td>
          <td><%= order_product.subtotal.to_s(:delimited) %></td>

          <%= form_with model: order_product, url: admin_order_product_path(order_product.id), method: :patch do |f| %>
          <td>
            <%= f.select:produciton_status, OrderDetail.produciton_status_i18n.invert,{ 製作不可: 0, 製作待ち: 1, 製作中: 2, 製作完了: 3} %>
          </td>
          <td>
            <%= f.submit "更新", class:" btn btn-success" %>
          </td>
          <% end %>
        </tr>
        <% end %>

        </tbody>
      </table>
    </div>


    <div class="col-md-3">
      <div class="example">
        <p><strong>商品合計</strong><%= (@order.billing_total - @order.postage.to_s(:delimited) %>円</p>
        <p><strong>送料</strong><%= @order.postage.to_s(:delimited) %>円</p>
        <p><strong>請求金額合計<%= @order.billing_total.to_s(:delimited) %>円</strong></p>
      </div>
    </div>

  </div>

</div>