<p id="notice"></p>
<div class="container">
  <div class="row">
    <h5 class="bg-light text-dark">配送先登録/一覧</h5>
  </div>

  <%= form_with model: @address, url: public_shipping_addresses_path do |f| %>
    <div class="row mb-3">
      <%= f.label :"郵便番号（ハイフンなし)", class: "col-md-3 col-form-label" %>
      <div class="col-md-3">
        <%= f.text_field :postal_code, placeholder: "0000000", class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <%= f.label :住所, class: "col-md-3 col-form-label" %>
      <div class="col-md-7">
        <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3 pb-3">
      <%= f.label :宛名, class: "col-md-3 col-form-label" %>
      <div class="col-md-3">
        <%= f.text_field :name, placeholder: "令和道子", class: "form-control" %>
      </div>
      <div class="col-md-5 text-right">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-10">
      <table class="table", border="1">
        <thead class="thead-light">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to "編集する", edit_public_shipping_address_path(address), class: "btn btn-success" %>
                <%= link_to "削除する", public_shipping_address_path(address), method: :delete, class: "btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
