<p id="notice"></p>
<div class="container">

  <div class="row mb-3">
    <h5 class="bg-light text-dark">配送先編集</h5>
  </div>


 <%= form_with model: @address do |f| %>

  <div class="row mb-3">
    <%= f.label :"郵便番号（ハイフンなし)", class: "col-md-3 col-form-label" %>
    <div class="col-md-3">
      <%= f.text_field :postal_code, class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <%= f.label :住所, class: "col-md-3 col-form-label" %>
    <div class="col-md-7">
      <%= f.text_field :address, class: "form-control" %>
    </div>
  </div>

  <div class="row mb-3">
    <%= f.label :宛名, class: "col-md-3 col-form-label" %>
    <div class="col-md-3">
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="col-md-6 text-right">
    <%#= link_to "変更内容を保存", address_path(@address) %>
      <%= f.submit "変更内容を保存", class: "btn btn-success" %>
    </div>
  </div>

  <% end %>

</div>