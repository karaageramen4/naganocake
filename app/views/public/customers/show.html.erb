<div class="container d-flex justify-content-center flex-column align-items-center">

  <div>
    <h2>マイページ</h2>
  </div>
  <div>
    <div>
      登録情報<%= link_to "編集する", public_edit_information_path  %>
    </div>
    <table>
      <tr>
      <td>氏名</td>
      <td><%= current_customer.last_name %>　<%= current_customer.first_name %></td>
      </tr>
      
      <tr>
      <td>カナ</td>
      <td><%= current_customer.last_name_kana %>　<%= current_customer.first_name_kana %></td>
      </tr>
      
      <tr>
      <td>郵便番号</td>
      <td><%= current_customer.postal_code %></td>
      </tr>
      
      <tr>
      <td>住所</td>
      <td><%= current_customer.address %></td>
      </tr>
      
      <tr>
      <td>電話番号</td>
      <td><%= current_customer.phone_number %></td>
      </tr>
      
      <tr>
      <td>メールアドレス</td>
      <td><%= current_customer.email %></td>
      </tr>
      
    </table>
    <div>
      <label>配送先</label><%= link_to "一覧を見る", "/"  %>
    </div>
    <div>
      <label>注文履歴</label><%= link_to "一覧を見る", "/"  %>
    </div>
  </div>


</div>