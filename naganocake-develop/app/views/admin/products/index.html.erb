<p id="notice"></p>
<div class="container">

  <div class="row">
    <div class="col-md-11">
      <h5 class="bg-light col-md-2 text-dark">商品一覧</h5>
    </div>
    <div class="col-md-1">
      <%= link_to new_admin_product_path do %>
        <i class="fa fa-plus-circle"></i>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.id %></td>
              <td>
                <%= link_to admin_product_path(product) do %>
                  <%= product.name %>
                <% end %>
              </td>
              <td><%= number_with_delimiter(product.price) %></td>
              <td><%= product.genre.name %></td>
              <td>
                <% if product.is_sold? %>
                  <p class="text-success">販売中</p>
                <% else %>
                  <p class="text-secondary">販売停止中</p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="d-block mx-auto">
      <%= paginate @products %>
    </div>
  </div>
</div>
